<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, class:'form-control name', id:"user_name", placeholder:"名前"%>
        </div>
       <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:'form-control-file user_image', id:"user_profile_image" %>  
        </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :name, autofocus: true, class:'form-control introduction', id:"user_introduction" %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User" />
      </div>
    </form>  
  </div>
</div>